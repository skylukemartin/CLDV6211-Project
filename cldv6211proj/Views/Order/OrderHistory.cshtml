@using Shared.Enums
@model cldv6211proj.Models.ViewModels.UserOrderInfos

@{
    ViewData["Title"] = "Order History";
    var curOrders = Model.OrderInfos.Where(oi => oi.Order.Status < OrderStatus.Completed).ToList();
    var pastOrders = Model.OrderInfos.Where(oi => oi.Order.Status >= OrderStatus.Completed).ToList();
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (curOrders.Count < 1 && pastOrders.Count < 1)
            {
                <h1 class="mb-4">No Orders</h1>
            }
            else
            {
                @if (curOrders.Count > 0)
                {
                    <h1 class="mb-4">Current Orders</h1>
                    @foreach (var orderInfo in curOrders)
                    {
                        <div class="card mb-3">
                            <div class="card-header">
                                Order #@orderInfo.Order.ID
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between bd-highlight">
                                    <div class="d-flex justify-content-between bd-highlight">
                                        <img src="@orderInfo.Product.ImageURL" alt="@orderInfo.Product.Name"
                                            style="max-height: 123px">
                                        <div class="d-flex flex-column align-items-start px-2 bd-highlight">
                                            <div class="d-flex flex-row">
                                                <h4 class="card-title">@orderInfo.Product.Name</h4>
                                            </div>
                                            <div class="card-text">Date: yyyy-MM-dd</div>
                                            <div class="card-text ">Quantity: @orderInfo.Order.Quantity </div>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column align-items-end px-2 bd-highlight">
                                        <div class="card-text">
                                            <span class="badge @GetStatusClass(orderInfo.Order.Status)">
                                                @orderInfo.Order.Status.ToString()
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                @if (pastOrders.Count > 0)
                {
                    <h1 class="mb-4">Previous Orders</h1>
                    @foreach (var orderInfo in pastOrders)
                    {
                        <div class="card mb-3">
                            <div class="card-header">
                                Order #@orderInfo.Order.ID
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between bd-highlight">
                                    <div class="d-flex justify-content-between bd-highlight">
                                        <img src="@orderInfo.Product.ImageURL" alt="@orderInfo.Product.Name"
                                            style="max-height: 123px">
                                        <div class="d-flex flex-column align-items-start px-2 bd-highlight">
                                            <div class="d-flex flex-row">
                                                <h4 class="card-title">@orderInfo.Product.Name</h4>
                                            </div>
                                            <div class="card-text">Date: yyyy-MM-dd</div>
                                            <div class="card-text ">Quantity: @orderInfo.Order.Quantity </div>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column align-items-end px-2 bd-highlight">
                                        <div class="card-text">
                                            <span class="badge @GetStatusClass(orderInfo.Order.Status)">
                                                @orderInfo.Order.Status.ToString()
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>

@functions {
    private string GetStatusClass(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Created => "bg-secondary text-white",
            OrderStatus.Processing => "bg-success text-white",
            OrderStatus.PendingShipping => "bg-warning text-dark",
            OrderStatus.Completed => "bg-success text-white",
            OrderStatus.Failed => "bg-danger text-white",
            _ => "bg-danger text-white",
        };
    }
}
