@{
    ViewData["Title"] = "My Work";
}

<div class="my-work">
    <h1>@ViewData["Title"]</h1>
    <p>
        Have a look at our extensive catalogue of handcrafted products,
        created by craftmasters all over the world.
    </p>

    <div class="craftwork">
